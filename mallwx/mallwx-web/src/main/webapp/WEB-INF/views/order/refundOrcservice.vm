}
//取消投诉
function canclecomplain(id){
	if(confirm("确定取消投诉么？")){
		$.ajax({
	        url:"$request.contextPath/orderWx/complaincancle",
	        type:"post",
	        data:{
	            id:id
	        },
	        dataType:'json',
	        success:function(data){
	            if(data.success){
	            	var obj = $("#myTab0 :eq(" + 2 + ")")[0];
            		changeOrderStatus(obj, 2);
	            }else{
	                $("#lierror").html("取消失败");
	            }
	        },error:function(){
	            alert("系统繁忙，请稍后再试");
	        }
	    });
	}
}
</script>
