#parse("common/scriptAndCss.vm")
<script type="text/javascript">
$(document).ready(function(){
	//pageSize,url,totalItem, appendId,selectElement,data, ,callback
	var Num = 0;
	var url = "$request.getContextPath()/orderWx/refundOrcservice?type="+Num;
	var totalItem = '$!{totalItem}';
	$.dropDownFresh('3',url, totalItem , "myTab0_Content" + Num,"wrapper");
	
});
$(document).ready(function(){
	changeIconToRed(2);
	
	var selectindex=sessionStorage.getItem("aaaa");
	if(selectindex){
		changeOrderStatus( $("#myTab0 :eq(" + selectindex + ")")[0], parseInt(selectindex));
		sessionStorage.removeItem("aaaa");
	}
});

function changeOrderStatus(thisObj, Num){
// 	if (thisObj.className == "active")
// 		return;
	var tabObj = thisObj.parentNode.id;
	var tabList = document.getElementById(tabObj).getElementsByTagName("li");
	for (i = 0; i < tabList.length; i++) {
		if (i == Num && Num == 0) {//选中
			$.ajax({
			   type: "POST",
			   url: "$request.getContextPath()/orderWx/refundOrcservice?type="+Num,
			   dataType: "html",
			   success: function(data){
				   $("#"+tabObj + "_Content" + Num).empty().append(data);
				   
				   var url = "$request.getContextPath()/orderWx/refundOrcservice?type="+Num;
				   var totalItem = $("#totalItem").val();
				   $.dropDownFresh('3',url, totalItem , "myTab0_Content" + Num,"wrapper");
			   }
			});
			thisObj.className = "active";
			document.getElementById(tabObj + "_Content" + i).style.display = "block";
		}else if(i == Num && Num == 1){
			$.ajax({
			   type: "POST",
			   url: "$request.getContextPath()/orderWx/cserviceManager?type="+Num,
			   dataType: "html",
			   success: function(data){
				   $("#"+tabObj + "_Content" + Num).empty().append(data);
					   
				   var url = "$request.getContextPath()/orderWx/cserviceManager?type="+Num;
				   var total = $("#total").val();
				   $.dropDownFresh('3',url, total , "myTab0_Content" + Num,"wrapper");
			   }
			});
			thisObj.className = "active";
			document.getElementById(tabObj + "_Content" + i).style.display = "block";
		}else if(i == Num && Num == 2){
			$.ajax({
			   type: "POST",
			   url: "$request.getContextPath()/orderWx/gocomplainlist?type="+Num,
			   dataType: "html",
			   success: function(data){
				   $("#"+tabObj + "_Content" + Num).empty().append(data);
					   
				   var url = "$request.getContextPath()/orderWx/gocomplainlist?type="+Num;
				   var total1 = $("#total1").val();
				   console.debug(total1);
				   $.dropDownFresh('3',url, total1 , "myTab0_Content" + Num,"wrapper");
			   }
			});
			
			thisObj.className = "active";
			document.getElementById(tabObj + "_Content" + i).style.display = "block";
		}else {//未选中
			tabList[i].className = "normal";
			document.getElementById(tabObj + "_Content" + i).style.display = "none";
			$("#"+tabObj + "_Content" + Num).empty();
		}
	}
}
//订单详情
