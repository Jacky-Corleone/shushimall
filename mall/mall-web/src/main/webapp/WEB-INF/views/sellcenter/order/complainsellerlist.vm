    function canclecomplain(id){
    	if(confirm("确定取消投诉么？")){
	        $.ajax({
	            url:"$request.contextPath/complain/complaincancle",
	            type:"post",
	            data:{
	                id:id
	            },
	            dataType:'json',
	            success:function(data){
	                if(data.success){
	                    $("#lierror").html(data.msg);
	                    showDiv('showErrorMsg');
	                   // topage(pageNo);
	                }else{
	                    $("#lierror").html("取消失败");
	                    showDiv('showErrorMsg');
	                }
	            },error:function(){
	                alert("系统繁忙，请稍后再试");
	            }
	        });
    	}
    }
