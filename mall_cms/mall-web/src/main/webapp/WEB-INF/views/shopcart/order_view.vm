    	var ext = fileInput.substring(extStart,fileInput.length).toUpperCase();
    	if(ext!=".JPG" && ext!=".jpg" && ext!=".JPEG" && ext!=".jpeg" && ext!=".PNG" && ext!=".png" && ext!=".BMP" && ext!=".bmp"){
    		alert("图片限于jpg,jpeg,png,bmp格式");
    		return false;
    	}
